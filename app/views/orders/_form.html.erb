      <%= f.text_field :gateway, :class => 'form-control' %>
    </div>
    <%=f.error_span(:gateway) %>
  </div>
  <div class="form-group">
    <%= f.label :total_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :total_price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:total_price) %>
  </div>
  <div class="form-group">
    <%= f.label :sub_total_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sub_total_price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sub_total_price) %>
  </div>
  <div class="form-group">
    <%= f.label :total_tax, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :total_tax, :class => 'form-control' %>
    </div>
    <%=f.error_span(:total_tax) %>
  </div>
  <div class="form-group">
    <%= f.label :currency, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :currency, :class => 'form-control' %>
    </div>
    <%=f.error_span(:currency) %>
  </div>
  <div class="form-group">
    <%= f.label :app_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :app_id, :class => 'form-control' %>
