<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :shopify_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :shopify_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:shopify_id) %>
  </div>
  <div class="form-group">
    <%= f.label :shopify_created_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :shopify_created_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:shopify_created_at) %>
  </div>
  <div class="form-group">
    <%= f.label :shopify_updated_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :shopify_updated_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:shopify_updated_at) %>
  </div>
  <div class="form-group">
    <%= f.label :number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class="form-group">
    <%= f.label :token, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :token, :class => 'form-control' %>
